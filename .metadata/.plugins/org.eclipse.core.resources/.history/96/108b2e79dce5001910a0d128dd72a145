package main.fr.ut2j.m1ice.ootesting;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

class MyPointTest {

	@BeforeEach
	void setUp() throws Exception {
	}

	@Test
	void testMyPoint1() {
		MyPoint point = new MyPoint();
		assertEquals(0d, point.getX(), 0.0001);
		assertEquals(0d, point.getY(), 0.0001);
	}
	
	@Test
	void testMyPoint2() {
		double x = 2.0;
		double y = 2.5;
		MyPoint point = new MyPoint(x, y);
		assertEquals(x, point.getX(), 0.0001);
		assertEquals(y, point.getY(), 0.0001);
	}
	
	@Test
	void testAccessorX() {
		MyPoint point = new MyPoint();
		double newX = Math.random();
		point.setX(newX);
		assertEquals(newX, point.getX(), 0.0001);
	}

	@Test
	void testAccessorY() {
		MyPoint point = new MyPoint();
		double newY = Math.random();
		point.setY(newY);
		assertEquals(newY, point.getY(), 0.0001);
	}
	
	@Test
	void testAccessorXdoubleNaN() {
		MyPoint point = new MyPoint();
		double oldX = point.getX();
		double newX = Double.NaN;
		point.setX(newX);
		boolean isNan = Double.isNaN(point.getX());
		assertFalse(isNan);
		assertEquals(oldX, point.getX(), 0.0001);
	}
	
	@Test
	void testAccessorYdoubleNaN() {
		MyPoint point = new MyPoint();
		double newY = Double.NaN;
		point.setY(newY);
		assertNotEquals(newY, point.getY(), 0.0001);
	}
}
